<main>
    <h1><%= @user.email %></h1>
    <% if @user.horoscopist? %>
        <div class="">
            <p>Hi, horoscopist</p>
        </div>

        <div class="flex justify-between items-center">
            <h1 class="font-bold text-4xl">Posts</h1>
            <%= link_to "New post", new_post_path, class: "rounded-lg py-3 px-5 bg-blue-600 text-white block font-medium" %>
        </div>
        
        <div>
            <p>Here are your posts:</p>
            <ul>
                <% @posts = @user.posts %>
                <% @posts.each do |post| %>
                    <ul><%= link_to post.title, post_path(post) %></ul>
                <% end %>
            </ul>
        </div>

    <% elsif @user.viewer? %>
        <p>Hi, viewer</p>
    
    
    
    <% end %>    
</main>