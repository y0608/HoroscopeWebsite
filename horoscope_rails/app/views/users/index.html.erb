<main>
    <% @users = User.all %>
    <% @users.each do |user| %>
      <%= link_to user.email, user_path(user) %>
      <%= form_for(user, url: update_role_user_path(user), method: :patch) do |f| %>
        <%= f.select :role, User.roles.keys %>
        <%= f.submit 'Update Role' %>
      <% end %>
      <br>
    <% end %>
</main>