<div id="<%= dom_id post %>" class="pt-6">
  <div class="max-w-md mx-auto overflow-hidden bg-yellow-50 shadow-md rounded-md">
    <div class="p-8">
      <div class="block mb-1 font-extrabold">
        <%= post.title %>
      </div>

      <div class="block font-extralight mb-1">
        <%= post.horoscopist.email %>
      </div>

      <p class="my-7 text-gray-700 truncate">
        <%= @your_text_content %>
      </p>

      <div class="h-5 linear-gradient-to-b from-transparent to-white"></div>

      <%= link_to "Read More", post, class: "font-sans bg-blue-400 text-white rounded hover:bg-blue-600 px-6 py-3"%>
    </div>
  </div>
</div>
